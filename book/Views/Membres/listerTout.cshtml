@model System.Collections.Generic.IEnumerable<book.Models.Membre>

@{
    ViewBag.Title = "listerTout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="constainer-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2>Liste des Membres</h2>
            <table class="table table-hover table-light table-striped table-bordered">
                <thead class="red">
                <tr> 
                    <th>
                        
                    </th>
                    <th>
                      Nom
                    </th>
                    <th>
                      Téléphone
                    </th>
                    <th>
                      Courriel
                    </th>
                    <th>
                      Commentaire
                    </th>
                    
                </tr>
                </thead>
               
                <tbody>
                
                 @foreach (var item in Model)
                  { 
                   <tr>
                    <td>
                        <img width="50px" height="50px" src="@item.Image" alt="image">
                    </td>
                 
                    <td>
                        @item.Prenom
                    </td>
                    <td>
                        @item.Courriel
                    </td>
                    <td>
                        @item.Telephone
                    </td>
                    <td>
                        @item.Commentaire
                    </td>

                   </tr>
                  }
                 

                </tbody>
            </table>
        </div>
    </div>
</div>