@model System.Collections.Generic.List<book.Models.Retard>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="constainer-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2>Liste des Retards</h2>
            <table class="table table-hover table-light table-striped table-bordered">
                <thead class="red">
                <tr>  
                    <th>
                        Code
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Courriel
                    </th>
                    <th>
                        Livre 1
                    </th>
                    <th>
                        Livre 2
                    </th>
                    <th>
                       Livre 3
                    </th>
                    <th>
                        Emprunt
                    </th>
                    <th>
                        Retour
                    </th>
                    
                </tr>
                </thead>
               
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Code
                        </td>
                        <td>
                            @item.Prenom
                        </td>
                        <td>
                            @item.Courriel
                        </td>
                        <td>
                            @item.Livre1
                        </td>
                        <td>
                            @item.Livre2
                        </td>
                        <td>
                            @item.Livre3
                        </td>
                        <td>
                            @item.DateEmprunt
                        </td>
                        <td>
                            @item.DateRetour
                        </td>
                    </tr>
                }
                   
               
                </tbody>
            </table>
        </div>
    </div>
  </div>